<Window x:Class="balducci.jacopo._5I.Briscola.GameResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Balducci Jacopo - Briscola" Height="300" Width="300" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Loaded="GameResultWindow_OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="GAME RESULT" HorizontalContentAlignment="Center" FontSize="24" Grid.Row="0" />
        <Label Content="Result: " Grid.Row="1" Name="LabelWinner" />
        <Label Content="Player Points: " Grid.Row="2" Name="LabelPlayerPoints" />
        <Label Content="Cpu Points: " Grid.Row="3" Name="LabelCpuPoints" />
    </Grid>
</Window>